set folder           = ~/Mail
set alias_file       = ~/.mutt/alias         # where to store aliases
set header_cache     = ~/.mutt/cache/headers # where to store headers
set message_cachedir = ~/.mutt/cache/bodies  # where to store bodies
set certificate_file = ~/.mutt/certificates  # where to store certs
set mailcap_path     = ~/.mutt/mailcap       # entries for filetypes
set tmpdir           = ~/.mutt/temp          # where to keep temp files
set signature        = ~/.mutt/sig           # my signature file
set mailcap_path     = ~/.mailcap

# Sending emails
set from     = "bull.fabian@googlemail.com"
set sendmail = "/usr/local/bin/msmtp -a bullfabian"
set sendmail_wait = 0
unset record

source ~/.mutt/gpg.rc

set mail_check_stats

# Side Bar View Options ---------------------------------
# Enable side bar
set sidebar_visible = yes
# Plenty of space
set sidebar_width = 45
# Pretty line-drawing character
set sidebar_divider_char = ' │ '
# Pretty side bar:
set sidebar_format = '%B%* %F:%N:%S'
#
# Shorten mailbox names
set sidebar_short_path
# Delete everything up to the last / character
set sidebar_delim_chars="/"
# Indent folders whose names we've shortened
set sidebar_folder_indent
# Indent with two spaces
set sidebar_indent_string="  "

# Basic Options --------------------------------------
# Read/new is good enough for me
unset mark_old
# bell on new mails
set beep_new

# Status Bar -----------------------------------------
set status_chars  = " *%A"
set status_format = "───[ Folder: %f ]───[%r%m messages%?n? (%n new)?%?d? (%d to delete)?%?t? (%t tagged)? ]───%>─%?p?( %p postponed )?───"

# Compose View Options -------------------------------
set realname = "Fabian Bull"          # who am i?
set envelope_from                    # which from?
set sig_dashes                       # dashes before sig
set edit_headers                     # show headers when composing
set fast_reply                       # skip to compose when replying
set askcc                            # ask for CC:
set fcc_attach                       # save attachments with the body
unset mime_forward                   # forward attachments as part of body
set forward_format = "Fwd: %s"       # format of subject when forwarding
set forward_decode                   # decode when forwarding
set attribution = "On %d, %n wrote:" # format of quoting header
set reply_to                         # reply to Reply to: field
set reverse_name                     # reply as whomever it was to
set include                          # include message in replies
set forward_quote


# Side Bar Options -------------------------------
# Color of the current, open, mailbox
# Note: This is a general Mutt option which colors all selected items.
color indicator brightcolor16 black
 
# Color of the highlighted, but not open, mailbox.
color sidebar_highlight color16 black
 
# Color of the divider separating the Sidebar from Mutt panels
color sidebar_divider white black
 
# Color to give mailboxes containing flagged mail
color sidebar_flagged red black
 
# Color to give mailboxes containing new mail
color sidebar_new green black
 
# Color to give mailboxes containing no new/flagged mail, etc</emphasis>
color sidebar_ordinary white black

color hdrdefault white black  # headers white on black
color header brightgreen black ^From:  # sender's name in green
color quoted cyan black  # quoted text in blue
color signature red black   # signature in red

# Index View Options ---------------------------------
set date_format = "%m/%d/%y"
set index_format = "[%Z]  %D  %-20.20F  %s"
set sort = threads                         # like gmail
set sort_aux = reverse-last-date-received  # like gmail
set sort_browser = desc
set uncollapse_jump                        # don't collapse on an unread message
set sort_re                                # thread based on regex
set reply_regexp = "^(([Rr][Ee]?(\[[0-9]+\])?: *)?(\[[^]]+\] *)?)*"

# Pager View Options
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs
set pager_index_lines 	= 15 	# number of index lines to show
set pager_context 		= 3     # number of context lines to show
set pager_stop          = yes   # don't go to next message automatically

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"

# Index Key Bindings ---------------------------------
bind index g        noop
bind index gg       first-entry
bind index G        last-entry

bind index R        group-reply
bind index <tab>    sync-mailbox
bind index <space>  collapse-thread

bind index,pager \CP sidebar-prev
bind index,pager \CN sidebar-next
bind index,pager \CI sidebar-open
bind index,pager \CB sidebar-toggle-visible
bind pager,generic   \Cu    half-up
bind pager,generic   \Cd    half-down
#
# Options to directly view html emails
auto_view text/html
alternative_order text/plain text/enriched text/html

# GPG
set pgp_use_gpg_agent = yes
set crypt_autosign = yes
set crypt_replyencrypt = yes
set pgp_sign_as      = 20EF50ABC7858B9C

macro pager \cb <pipe-entry>'urlview'<enter> 'Follow links with urlview'

folder-hook . "push <collapse-all>\n"

# sidebar
set sidebar_width   = 20
set sidebar_visible = no 

macro index c "<change-vfolder>?" "Change to vfolder overview"

set virtual_spoolfile=yes

virtual-mailboxes   \
                    "Datameer - Inbox" "notmuch://?query=tag:inbox to:fabian.bull@datameer.com" \
                    "Datameer - Github" "notmuch://?query=from:notifications@github.com to:fabian.bull@datameer.com" \
                    "Datameer - JIRA" "notmuch://?query=from:r2d2@datameer.com subject:[JIRA]" \
                    "Datameer - Confluence" "notmuch://?query=from:r2d2@datameer.com subject:[confluence]" \
                    "Datameer - Archive" "notmuch://?query=to:fabian.bull@datameer.com" \
                    "Gmail - Archive" "notmuch://?query=to:bull.fabian@googlemail.com" \
                    "Gmail - Inbox" "notmuch://?query=tag:inbox to:bull.fabian@googlemail.com"

# notmuch bindings
macro index \\\\ "<vfolder-from-query>"                          # looks up a hand made query
macro index A "<modify-labels>+archive -unread -inbox\\n"        # tag as Archived
macro index I "<modify-labels>-inbox -unread\\n"                 # removed from inbox
macro index S "<modify-labels-then-hide>-inbox -unread +junk\\n" # tag as Junk mail
