Config { font = "xft:Hasklig-12"
       , additionalFonts = []
       , borderColor = "black"
       , border = TopB
       , bgColor = "#444"
       , fgColor = "white"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [
                      Run Memory ["-t","<fc=#ff8080>Mem</fc>: <usedratio>%"] 10
                    , Run BatteryP ["BAT0"] [
                        "-t", "<fc=#ff8080><acstatus></fc>: <left>% - <timeleft>",
                        "--",
                        --"-c", "charge_full",
                        "-O", "AC",
                        "-o", "Bat",
                        "-h", "green",
                        "-l", "red"
                        ] 10
                    , Run Mail [("<fc=#ff8080>P</fc>: ", "~/.mail/gmail/Inbox/"), ("<fc=#ff8080>D</fc>: ", "~/.mail/datameer/Inbox/")] "mail"
                    , Run Date "<fc=#ff8080>%a %b %d</fc> %H:%M" "date" 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %mail% | %memory% %battery% | %date%"
       }
