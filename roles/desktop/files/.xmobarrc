Config { font = "xft:Hasklig-10"
       , additionalFonts = []
       , borderColor = "black"
       , border = TopB
       , bgColor = "#444"
       , fgColor = "white"
       , alpha = 255
       , position = Top
       , textOffset = -1
       , iconOffset = -1
       , lowerOnStart = True
       , pickBroadest = False
       , persistent = False
       , hideOnStart = False
       , iconRoot = "."
       , allDesktops = True
       , overrideRedirect = True
       , commands = [
                      Run Memory ["-t","<fc=orange>Mem</fc>: <usedratio>%"] 10
                    , Run BatteryP ["BAT0"] [
                        "-t", "<fc=orange><acstatus></fc>: <left>% - <timeleft>",
                        "--",
                        --"-c", "charge_full",
                        "-O", "AC",
                        "-o", "Bat",
                        "-h", "green",
                        "-l", "red"
                        ] 10
                    , Run Mail [("<fc=orange>P</fc>: ", "~/mail/bull_fabian_gmail/archive"), ("<fc=orange>D</fc>: ", "~/mail/fabian_bull_datameer/archive")] "mail"
                    , Run Date "<fc=orange>%a %b %d</fc> %H:%M" "date" 60
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = "%StdinReader% }{ %mail% | %memory% %battery% | %date%"
       }
