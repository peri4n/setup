set hlsearch

set smartcase 

set showmode " show current vim mode

set history=1000

set number " print the line number in front of each line

set relativenumber " show the line number relative to the line with the cursor

set clipboard=unnamedplus,unnamed

set surround " emulates vim surround

let mapleader = ','

nmap <leader>t :action GotoFile<cr>
nmap <leader>c :action GotoClass<cr>
nmap <leader>ns :action GotoSymbol<cr>
nmap <leader>nm :action FileStructurePopup<cr>

" actions
nnoremap <leader>a :action GotoAction<cr>
nnoremap <leader>i :action QuickImplementations<cr>
nnoremap <leader>q :action CloseContent<cr>
nnoremap <leader>Q :action ReopenClosedTab<cr>
nnoremap <leader>\ :action VimFilePrevious<cr>
nnoremap <leader>E :action SearchEverywhere<cr>
nnoremap <leader>e :action Switcher<cr>
nnoremap <leader>T :action GotoSymbol<cr>

""""""""""""""""""""""""""""""""""
"         code navigation        "
""""""""""""""""""""""""""""""""""
nnoremap <leader>gi :action GotoImplementation<cr>
nnoremap <leader>gd :action GotoDeclaration<cr>
nnoremap <leader>gu :action GotoSuperMethod<cr>
nnoremap <leader>gt :action GotoTest<cr>
nnoremap <leader>u :action FindUsages<cr>
nnoremap <leader>k :action HighlightUsagesInFile<cr>
"
" built-in navigation to navigated items works better
nnoremap <c-o> :action Back<cr>
nnoremap <c-i> :action Forward<cr>

""""""""""""""""""""""""""""""""""
"         configurations         "
""""""""""""""""""""""""""""""""""
" run
nnoremap <leader>rr :action RunClass<cr>
nnoremap <leader>rc :action ChooseRunConfiguration<cr>
" debug
nnoremap <leader>dd :action DebugClass<cr>
nnoremap <leader>dc :action ChooseDebugConfiguration<cr>
nnoremap \R :action Run<cr>
nnoremap \D :action Debug<cr>
nnoremap \c :action CheckStyleCurrentFileAction<cr>

""""""""""""""""""""""""""""""""""
"         debug                  "
""""""""""""""""""""""""""""""""""
nnoremap <leader>dd :action ToggleLineBreakpoint<cr>

""""""""""""""""""""""""""""""""""
"         refactoring            "
""""""""""""""""""""""""""""""""""
nnoremap <leader>xr :action RenameElement<cr>

" unimpaired mappings
nnoremap [<leader> O<esc>j
nnoremap ]<leader> o<esc>k
nnoremap [q :action PreviousOccurence<cr>
nnoremap ]q :action NextOccurence<cr>
nnoremap [m :action MethodUp<cr>
nnoremap ]m :action MethodDown<cr>
nnoremap [c :action VcsShowPrevChangeMarker<cr>
nnoremap ]c :action VcsShowNextChangeMarker<cr>map <leader>d :action ShowErrorDescription<cr>
