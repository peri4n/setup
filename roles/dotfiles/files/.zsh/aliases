# vim: set ft=zsh:

# utility
alias nv='nvim'
alias gw='./gradlew'
alias gwi='./gradlew -i'
alias mkdir='mkdir -pv'
alias o='open'
alias e='exit'

alias l='ls -lGh'
alias ll='ls -alGh'

alias ff="find . -type f -name"

# post aliases
alias -g M='| more'
alias -g C='| pbcopy'
alias -g G='| grep'

# vagrant
alias vup='vagrant up'
alias vdn='vagrant halt'

# taskwarrior
alias tw='task'
alias twa='task add'
alias twd='task done'
alias twl='task log'

# password store
alias pw='pass'

# tmux
alias t='tmux'
